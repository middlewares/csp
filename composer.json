{
    "name": "middlewares/csp",
    "type": "library",
    "description": "Middleware to add the Content-Security-Policy header to the response",
    "license": "MIT",
    "keywords": [
        "psr-7",
        "psr-15",
        "middleware",
        "http",
        "csp",
        "security",
        "content-security-policy"
    ],
    "homepage": "https://github.com/middlewares/csp",
    "support": {
        "issues": "https://github.com/middlewares/csp/issues"
    },
    "require": {
        "php": "^7.0",
        "paragonie/csp-builder": "^2.2",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0|^7.0",
        "middlewares/utils": "^2.1",
        "zendframework/zend-diactoros": "^1.3",
        "friendsofphp/php-cs-fixer": "^2.0",
        "squizlabs/php_codesniffer": "^3.0",
        "monolog/monolog": "^1.22",
        "phpstan/phpstan": "^0.9.2|^0.10.3"
    },
    "suggest": {
        "psr/log-implementation": "Can be used to log the CSP reporting"
    },
    "autoload": {
        "psr-4": {
            "Middlewares\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Middlewares\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit --coverage-text",
            "phpcs"
        ],
        "cs-fix": "php-cs-fixer fix .",
        "coverage": "phpunit --coverage-html=coverage",
        "analyse": "phpstan analyse --no-progress --level 7 src"
    }
}
